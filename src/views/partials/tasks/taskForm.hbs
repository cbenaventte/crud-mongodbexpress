<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Add A Story</h3>
  <form action="/tasks/add" method="post">

    {{! Author Input }}
    <div class="mb-3">
      <label for="author">Name or Author:</label>
      <input
        id="author"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="author"
        placeholder="Author"
        autofocus
      />
    </div>

     {{! Title Input }}
    <div class="mb-3">
      <label for="title">Write a title:</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder="Title"
        autofocus
      />
    </div>

    {{! URL Input }}
    <div class="mb-3">
      <label for="url">Image Url:</label>
      <input
        id="url"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="url"
        placeholder="Url"
        autofocus
      />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control rounded-0 bg-dark text-white"
        name="description"
        cols="80"
        placeholder="Add a Description"
      ></textarea>
    </div>

   

    <button class="btn btn-primary" type="submit">Add</button>
  </form>
</div>